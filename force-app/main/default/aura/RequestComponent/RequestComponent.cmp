<aura:component description="RequestComponent">
    <aura:attribute name="parentCmp" type="Aura.Component" required="true"/>

    <aura:method name="requestCallback">
        <aura:attribute name="apexMethodName" type="String"/>
        <aura:attribute name="attributes" type="Object"/>
        <aura:attribute name="successCallback" type="Function"/>
        <aura:attribute name="errorCallback" type="Function"/>
    </aura:method>

    <aura:method name="requestPromise">
        <aura:attribute name="apexMethodName" type="String"/>
        <aura:attribute name="attributes" type="Object"/>
    </aura:method>
</aura:component>